{
	"name": "Clarity",
	"version": "0.0.0",
	"description": "Bring Clarity when browsing websites",
	"homepage_url": "https://github.com/kapango/clarity",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "clarity@kapango.github.io",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "clarity.png"
	},
	"permissions": [
		"storage"
	],
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"browser-polyfill.min.js",
			"background.js"
		]
	}
}
